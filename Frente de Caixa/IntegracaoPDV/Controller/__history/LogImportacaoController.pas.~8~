unit LogImportacaoController;

interface

uses
  Classes, SQLExpr, SysUtils, LogImportacaoVO;

type
  TLogImportacaoController = class
  protected
  public
    class procedure GravarLogImportacao(pTupla: String; pErro: String);
  end;

implementation

class procedure TLogImportacaoController.GravarLogImportacao(pTupla: String; pErro: String);
begin
  ConsultaSQL := '  insert into LOG_IMPORTACAO (' +
  // 'ID, '+
    'DATA_IMPORTACAO, ' + 'HORA_IMPORTACAO, ' + 'TUPLA, ' + 'LOG_ERRO) ' + 'values ( ' +
  // ':pID, '+
    ':pDATA_IMPORTACAO, ' + ':pHORA_IMPORTACAO, ' + ':pTUPLA, ' + ':pLOG_ERRO)';

  try
    try
      Query := TSQLQuery.Create(nil);
      Query.SQLConnection := FDataModule.ConexaoRetaguarda;
      Query.sql.Text := ConsultaSQL;

      Query.ParamByName('pDATA_IMPORTACAO').AsDate := now;
      Query.ParamByName('pHORA_IMPORTACAO').AsString := FormatDateTime('hh:mm:ss', now);
      Query.ParamByName('pTUPLA').AsString := Tupla;
      Query.ParamByName('pLOG_ERRO').AsString := Erro;

      Query.ExecSQL();
    except
      //
    end;
  finally
    Query.Free;
  end;
end;

end.
